<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item
        android:right="5dp"
        android:left="5dp"
        android:top="5dp"
        android:bottom="5dp">
        <shape android:shape="oval">
            <solid android:color="#DDDDDD"/> <!-- Background Color -->
        </shape>
    </item>
    <item>
        <rotate
            android:fromDegrees="0"
            android:toDegrees="360">
            <shape android:shape="oval">
                <solid android:color="#FF4081"/> <!-- Foreground Color (Vibrant Pink) -->
            </shape>
        </rotate>
    </item>
</layer-list>
